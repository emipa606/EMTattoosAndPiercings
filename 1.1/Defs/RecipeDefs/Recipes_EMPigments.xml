  <!-- base pigments -->
  <RecipeDef ParentName="EMPigments">
    <defName>MakeEMYellow</defName>
    <label>Make pollen pigment</label>
    <description>Ancient techniques blend the special properties of psychoid leaves with dormant mechanites from the planet to create an ink that will increase speed when tattooed on a colonist.</description>
    <jobString>Blending ingredients.</jobString>
    <workAmount>600</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>PsychoidLeaves</li>
          </thingDefs>
        </filter>
        <count>7</count>
      </li>
    </ingredients>
    <products>
      <EMPigmentYellow>1</EMPigmentYellow>
    </products>
    <researchPrerequisite>ResearchEMBasic</researchPrerequisite>
    <fixedIngredientFilter>
      <thingDefs>
        <li>PsychoidLeaves</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>
